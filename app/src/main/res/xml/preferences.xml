<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="@string/key_auto_clean"
        android:title="@string/title_auto_clean"/>

    <PreferenceCategory
        android:key="@string/key_developer_mode"
        android:title="@string/title_developer_mode">

        <SwitchPreference
            android:key="@string/key_developer_mode_enable"
            android:title="@string/title_developer_mode_enable"/>

        <SwitchPreference
            android:key="@string/key_auto_upload_log"
            android:title="@string/title_auto_upload_log"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/about">

        <Preference
            android:key="@string/key_about"
            android:title="@string/title_about"/>

        <Preference
            android:key="@string/key_how_to_use"
            android:title="@string/title_how_to_use"/>

        <Preference
            android:key="@string/key_open_source_address"
            android:title="@string/title_open_source_address"/>

        <Preference
            android:key="@string/key_license"
            android:title="@string/title_license"/>

        <Preference
            android:key="@string/key_check_update"
            android:title="@string/title_check_update"/>

        <Preference
            android:key="@string/key_version_code"
            android:summary="@string/app_version"
            android:title="@string/title_version_code"/>

    </PreferenceCategory>

</PreferenceScreen>
